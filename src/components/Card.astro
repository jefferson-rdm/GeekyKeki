---
const { img, alt, titulo, texto } = Astro.props
---

<div>
  <img src={img} alt={alt}>
  <h3>{titulo}</h3>
  <p>{texto}</p>
</div>

<style lang="scss">
  div {
    display: flex;
    flex-direction: column;
    gap: 16px;
    //background-color: var(--white);
    //border: solid 1px var(--black);
    border-radius: 0 0 8px 8px;
    overflow: hidden;
  }
  img {
    width: 100%;
  }
  h3 {
    width: 100%;
    //padding: 0 6%;
    font-size: 1.4em;
  }
  p {
    width: 100%;
    margin-bottom: 16px;
    //padding: 0 6%;
    font-size: 1.1em;
  }
</style>